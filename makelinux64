#Includes directory
IDIR = -Isrc/includes -Isrc/main/header -Isrc/command/header -Isrc/object/header -Isrc/map/header -Isrc/entity/header -Isrc/gamestate/header -Isrc/timer/header/ -Isrc/entities/GRID/ -Isrc/entities/SQUARE/ -Isrc/entities/PLAYER -Isrc/entities/DEFAULT -Isrc/entities/STAR -Isrc/glew/ -I/usr/include/lua5.2/
#Libs directory
LDIR = -L/usr/lib/x86_64-linux-gnu/
#compile
CC = g++
LD= ld
#compiler flags
CFLAGS = $(IDIR) $(LDIR) -pipe -m64 -g
#linker flags
LFLAGS = -lboost_system -lGL -lSDL2main -lSDL2 -lboost_thread -lGLEW -lGLU -llua5.2  -static-libgcc -static-libstdc++ 
#dependancys
#DEPS = 
#objs directory
ODIR = src/obj
#src files to compile
SRC = src/main/src/main.cpp src/command/src/command.cpp src/object/src/object.cpp src/map/src/map.cpp src/entity/src/entity.cpp src/gamestate/src/game_state.cpp src/timer/src/timer.cpp src/entities/GRID/GRID_entity.cpp src/entities/SQUARE/SQUARE_entity.cpp src/entities/PLAYER/PLAYER_entity.cpp src/entities/DEFAULT/DEFAULT_entity.cpp src/entities/STAR/STAR_entity.cpp
#output name
OBJ_NAME = bin/linux/game

all: $(SRC)
	$(CC) -o $(OBJ_NAME) $(SRC) $(CFLAGS) $(LFLAGS) 2> output.txt

